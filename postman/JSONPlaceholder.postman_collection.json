{
  "info": {
    "_postman_id": "bf67b01a-fb6a-485b-bc50-9370c758ac08",
    "name": "JSONPlaceholder - API Testing",
    "description": "Colección Postman para practicar requests y tests básicos contra JSONPlaceholder.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "_exporter_id": "51732817"
  },
  "item": [
    {
      "name": "GET /posts",
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('Status code is 200', function () {",
              "  pm.response.to.have.status(200);",
              "});",
              "",
              "pm.test('Response is a non-empty array', function () {",
              "  const data = pm.response.json();",
              "  pm.expect(Array.isArray(data)).to.eql(true);",
              "  pm.expect(data.length).to.be.above(0);",
              "});"
            ]
          }
        }
      ],
      "request": {
        "method": "GET",
        "header": [
          { "key": "Accept", "value": "application/json" }
        ],
        "url": {
          "raw": "https://jsonplaceholder.typicode.com/posts",
          "protocol": "https",
          "host": ["jsonplaceholder", "typicode", "com"],
          "path": ["posts"]
        }
      },
      "response": []
    },
    {
      "name": "POST /posts",
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('Status code is 201', function () {",
              "  pm.response.to.have.status(201);",
              "});",
              "",
              "pm.test('Response has an id', function () {",
              "  const data = pm.response.json();",
              "  pm.expect(data).to.have.property('id');",
              "});",
              "",
              "pm.test('Response echoes title/body/userId', function () {",
              "  const data = pm.response.json();",
              "  pm.expect(data.title).to.eql('foo');",
              "  pm.expect(data.body).to.eql('bar');",
              "  pm.expect(data.userId).to.eql(1);",
              "});"
            ]
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Accept", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"title\": \"foo\",\n  \"body\": \"bar\",\n  \"userId\": 1\n}",
          "options": {
            "raw": { "language": "json" }
          }
        },
        "url": {
          "raw": "https://jsonplaceholder.typicode.com/posts",
          "protocol": "https",
          "host": ["jsonplaceholder", "typicode", "com"],
          "path": ["posts"]
        }
      },
      "response": []
    }
  ]
}
